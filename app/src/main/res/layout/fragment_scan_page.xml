<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ScanPageFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:src="@drawable/sudotagsw" />

        <Button
            android:id="@+id/scanhomebutton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/homeicon" />

    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lenscropped"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/scanbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/bungee"
        android:text="Go to SCAN PAGE"
        android:textColor="#fff"
        android:paddingHorizontal="15dp"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here are few details that will help you with the process : \n\n• If it's a dark environment, you can use the volume buttons to turn on and off the flash light \n\n• You will get to know the name of the owner after you scanned the tag \n\n•You can also reach out to the owner using the Contact Owner button after you have scanned the tag"
        android:layout_margin="15dp"
        android:justificationMode="inter_word"
        android:textColor="#000"
        android:textSize="20dp"
        />




</LinearLayout>

</ScrollView>