<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutThree">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:src="@drawable/sudotagsw" />

            <Button
                android:id="@+id/homebutton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/homeicon" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/houseimage"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/customqr" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/houseimage"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bungee"
            android:layout_marginTop="25dp"
            android:text="Custom Tags"
            android:textColor="#059669"
            android:textSize="35dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You don't have always stick with the monochrome codes. It's time to move ahead with colorful codes. Reach use the Custom Order section within the app to make use of the Custom Tags service. "
            android:layout_marginHorizontal="15dp"
            android:justificationMode="inter_word"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_sans_extralight"
            android:id="@+id/description"
            android:layout_below="@id/heading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_below="@id/description">

            <Button
                android:id="@+id/toSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:paddingHorizontal="18dp"
                android:text="Previous"
                android:textColor="#fff"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                />

            <Button
                android:id="@+id/finishButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mybutton"
                android:paddingHorizontal="18dp"
                android:text="Finish"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:textSize="17dp" />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>