<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComingSoon"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:src="@drawable/sudotagsw" />

            <Button
                android:id="@+id/homebutton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/homeicon" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:layout_gravity="center"
            android:text="Upcoming"
            android:textColor="#515151"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Hey there, we're trying to bring a box full of features in the upcoming versions to make the retrieval process or the return process much more simpler. Here are few of the features which will be released soon : "
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:justificationMode="inter_word"
            android:fontFamily="@font/nunito_sans_extralight"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"

            android:cropToPadding="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/csoon"
            android:layout_gravity="center"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Developer"
            android:background="@drawable/mybutton"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="40dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:paddingVertical="10dp"
            android:id="@+id/contactDev"
            />


    </LinearLayout>


</ScrollView>